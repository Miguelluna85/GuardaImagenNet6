@model UsuarioCreateVM
@{
    ViewData["Title"] = "Crear Usuario";
}

<h3>Crear Usuario</h3>

<form asp-controller="FotoBinary" asp-action="Crear" method="post" enctype="multipart/form-data" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-5">
            <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="NombreUsuario" placeholder="Nombre Usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group  mt-3">
                <input type="password" class="form-control" asp-for="Contrasenya" placeholder="Contraseña" />
                <span asp-validation-for="Contrasenya" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="file" class="form-control-file" asp-for="FotoFile" accept="image/*" />
            </div>
            <div class="form-group mt-3">
                <input type="checkbox" class="form-control-checkbox" asp-for="Activo" checked="true" placeholder="Nombre Usuario" />
                <label for="Activo">Activo</label>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">Guardar</button>
                <a asp-controller="FotoBinary" asp-action="Listado" class="btn btn-primary">Listado</a>
            </div>
        </div>
        <div class="col-4 offset-2">
            <img src="~/image/usuario/userDefault.png" id="imgUser" alt="imagen usuario" width="200" />

        </div>
    </div>
</form>

@* Modal *@
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
     tabindex="-1" aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">@ViewBag.TituloMensaje</h1>
                @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
            </div>
            <div class="modal-body">
                <img id="imagenPop" src="@ViewBag.ImagenPop" alt="imagen" width="60" class="my-2"/>
                @ViewBag.Mensaje
            </div>
            <div class="modal-footer">
                @* <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button> *@
                <a type="button" asp-controller="FotoBinary" asp-action="Listado" class="btn btn-primary">Aceptar</a>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script src="~/js/usuario/PreVisualmagenUser.js" asp-append-verion="true"></script>
    @if (@ViewData["ModalVisible"] != null)
    {


        @if (@ViewBag.ModalVisible > 0)
        {
            <script type="text/javascript">
                $(document).ready(function () {
                @* alert("success login"); *@
                        $('#staticBackdrop').modal('show');
                });

            </script>
        }

    }
}
