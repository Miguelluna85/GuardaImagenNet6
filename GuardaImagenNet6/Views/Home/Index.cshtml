@model GuardaImagenNet6.ViewModel.UsuarioVM
@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="row">
    <h2>Alta de Usuario</h2>
</div>
<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
    <div class="row">
        <div class="col-5">
            <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="NombreUsuario" placeholder="Nombre Usuario" />
            </div>
            <div class="form-group  mt-3">
                <input type="password" class="form-control" asp-for="contrasenya" placeholder="Contraseña" />
            </div>
            <div class="form-group mt-3">
                <input type="file" class="form-control-file" asp-for="FotoByte" accept="image/*" />
            </div>
            <div class="form-group mt-3">
                <input type="checkbox" class="form-control-checkbox" asp-for="Activo" placeholder="Nombre Usuario" />
                <label for="Activo">Activo</label>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
        <div class="col-4 offset-2">
            <img src="~/image/user-azul.jpg" id="imgUser" alt="imagen usuario" width="50%" />
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/usuario/PreVisualmagenUser.js" asp-append-verion="true"></script>
}
